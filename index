                        name: "Sarah K.",
                        role: "Content Writer",
                        image: "https://images.unsplash.com/photo-1494790108755-2616b25bd76b?w=150&h=150&fit=crop&crop=face",
                        earnings: "+R47k",
                        quote: "Started part-time, now earning more than my 9-5 job ever could!"
                    },
                    {
                        name: "Michael B.",
                        role: "Web Developer",
                        image: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=150&h=150&fit=crop&crop=face",
                        earnings: "+R68k",
                        quote: "Built my dream career from my laptop. Freedom at last!"
                    },
                    {
                        name: "Nomsa P.",
                        role: "Social Media Manager",
                        image: "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=150&h=150&fit=crop&crop=face",
                        earnings: "+R29k",
                        quote: "From corporate burnout to loving what I do every day!"
                    }
                ];
                
                this.init();
            }
            
            init() {
                this.updateCarousel();
                setInterval(() => this.next(), 5000);
            }
            
            next() {
                this.currentStory = (this.currentStory + 1) % this.stories.length;
                this.updateCarousel();
            }
            
            updateCarousel() {
                if (!this.carousel) return;
                
                const story = this.stories[this.currentStory];
                
                this.carousel.style.opacity = '0';
                this.carousel.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    this.carousel.innerHTML = `
                        <div class="success-story">
                            <div class="flex items-center space-x-3 mb-4">
                                <img src="${story.image}" class="w-14 h-14 rounded-full border-2 border-green-400 object-cover">
                                <div class="flex-1">
                                    <div class="font-semibold text-white">${story.name}</div>
                                    <div class="text-sm text-gray-400">${story.role}</div>
                                </div>
                                <div class="bg-green-400 text-black px-3 py-1 rounded-full text-sm font-bold">${story.earnings}</div>
                            </div>
                            <p class="text-sm text-gray-300 leading-relaxed">"${story.quote}"</p>
                        </div>
                    `;
                    
                    this.carousel.style.opacity = '1';
                    this.carousel.style.transform = 'translateY(0)';
                }, 200);
            }
        }

        // Enhanced Smooth Scrolling
        function initSmoothScrolling() {
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        const offsetTop = target.offsetTop - 80;
                        window.scrollTo({
                            top: offsetTop,
                            behavior: 'smooth'
                        });
                        
                        // Close mobile menu if open
                        document.getElementById('mobile-menu')?.classList.add('hidden');
                    }
                });
            });
        }

        // Enhanced Intersection Observer for animations
        function initAnimationObserver() {
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach((entry, index) => {
                    if (entry.isIntersecting) {
                        setTimeout(() => {
                            entry.target.classList.add('slide-up');
                            entry.target.style.animationDelay = `${index * 0.1}s`;
                        }, index * 100);
                    }
                });
            }, observerOptions);

            // Observe all feature cards and animated elements
            document.querySelectorAll('.feature-card, .testimonial').forEach(el => {
                observer.observe(el);
            });
        }

        // Enhanced Parallax Effects
        function initParallaxEffects() {
            const parallaxElements = document.querySelectorAll('.parallax-element');
            let parallaxTicking = false;
            
            function updateParallax() {
                const scrollTop = window.pageYOffset;
                
                parallaxElements.forEach(element => {
                    const speed = element.dataset.speed || 0.5;
                    const yPos = -(scrollTop * speed);
                    element.style.transform = `translateY(${yPos}px)`;
                });
                
                parallaxTicking = false;
            }
            
            window.addEventListener('scroll', () => {
                if (!parallaxTicking) {
                    requestAnimationFrame(updateParallax);
                    parallaxTicking = true;
                }
            });
        }

        // Performance monitoring
        function initPerformanceMonitoring() {
            if ('performance' in window) {
                window.addEventListener('load', () => {
                    setTimeout(() => {
                        const perfData = performance.getEntriesByType('navigation')[0];
                        console.log('Page Load Performance:', {
                            loadTime: perfData.loadEventEnd - perfData.loadEventStart,
                            domContentLoaded: perfData.domContentLoadedEventEnd - perfData.domContentLoadedEventStart
                        });
                    }, 0);
                });
            }
        }

        // Initialize everything when DOM is ready
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize core components
            initFeatherIcons();
            initAOS();
            initSmoothScrolling();
            initAnimationObserver();
            initParallaxEffects();
            initPerformanceMonitoring();
            
            // Initialize handlers
            new FormHandler('application-form');
            new MobileMenuHandler();
            new NavbarHandler();
            new SuccessCarousel();
            
            // Add scroll listener
            window.addEventListener('scroll', handleScroll);
        });

        // Initialize Vanta after all scripts load
        window.addEventListener('load', () => {
            setTimeout(() => {
                initVanta();
                
                // Start counter animations
                setTimeout(() => {
                    createCounterAnimation('members-count', 0, 3247, 2500);
                    createCounterAnimation('live-earnings', 0, 4234567, 3500, val => `R${val.toLocaleString()}`);
                    createCounterAnimation('projects-count', 0, 1247, 2000);
                }, 800);
            }, 500);
        });

        // Cleanup on page unload
        window.addEventListener('beforeunload', () => {
            if (vantaEffect) {
                vantaEffect.destroy();
            }
        });

        // Handle resize events
        let resizeTimeout;
        window.addEventListener('resize', () => {
            clearTimeout(resizeTimeout);
            resizeTimeout = setTimeout(() => {
                if (vantaEffect) {
                    vantaEffect.resize();
                }
            }, 250);
        });
    </script>
</body>
</html>
