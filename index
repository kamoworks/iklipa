    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/three@0.119.1/build/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.net.min.js"></script>
    <script>
        // Enhanced Vanta.js background with better performance
        let vantaEffect;
        
        function initVanta() {
            if (window.VANTA && !vantaEffect) {
                vantaEffect = VANTA.NET({
                    el: "#vanta-bg",
                    mouseControls: true,
                    touchControls: true,
                    gyroControls: false,
                    minHeight: 200.00,
                    minWidth: 200.00,
                    scale: 1.00,
                    scaleMobile: 1.00,
                    color: 0x00D4AA,
                    backgroundColor: 0x0D1117,
                    points: window.innerWidth < 768 ? 8 : 15,
                    maxDistance: window.innerWidth < 768 ? 18 : 25,
                    spacing: window.innerWidth < 768 ? 12 : 18,
                    showDots: true
                });
            }
        }

        // Enhanced AOS initialization with better performance
        function initAOS() {
            AOS.init({
                duration: 1200,
                once: true,
                offset: 80,
                easing: 'cubic-bezier(0.4, 0, 0.2, 1)',
                anchorPlacement: 'top-bottom'
            });
        }

        // Enhanced Feather icons initialization
        function initFeatherIcons() {
            if (window.feather) {
                feather.replace({ 'stroke-width': 2 });
            }
        }

        // Advanced Counter Animations with better performance
        function createCounterAnimation(elementId, start, end, duration, formatter = (val) => val.toLocaleString()) {
            const element = document.getElementById(elementId);
            if (!element) return;
            
            let startTime = null;
            const startValue = start;
            const endValue = end;
            
            function animate(currentTime) {
                if (startTime === null) startTime = currentTime;
                const timeElapsed = currentTime - startTime;
                const progress = Math.min(timeElapsed / duration, 1);
                
                // Enhanced easing function
                const easeOutCubic = 1 - Math.pow(1 - progress, 3);
                const currentValue = Math.floor(startValue + (endValue - startValue) * easeOutCubic);
                
                element.textContent = formatter(currentValue);
                
                if (progress < 1) {
                    requestAnimationFrame(animate);
                }
            }
            
            requestAnimationFrame(animate);
        }

        // Enhanced Scroll Progress with throttling
        let scrollProgressTicking = false;
        
        function updateScrollProgress() {
            const winScroll = document.documentElement.scrollTop || document.body.scrollTop;
            const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            const scrolled = Math.min((winScroll / height) * 100, 100);
            
            const progressBar = document.getElementById('scroll-progress');
            if (progressBar) {
                progressBar.style.width = scrolled + '%';
            }
            
            scrollProgressTicking = false;
        }

        function handleScroll() {
            if (!scrollProgressTicking) {
                requestAnimationFrame(updateScrollProgress);
                scrollProgressTicking = true;
            }
        }

        // Enhanced Form Handling with real-time validation
        class FormHandler {
            constructor(formId) {
                this.form = document.getElementById(formId);
                this.progressBar = document.getElementById('form-progress');
                this.submitBtn = document.getElementById('submit-btn');
                this.submitText = document.getElementById('submit-text');
                this.submitLoading = document.getElementById('submit-loading');
                this.successDiv = document.getElementById('form-success');
                this.requiredInputs = this.form.querySelectorAll('input[required], select[required], textarea[required]');
                
                this.init();
            }
            
            init() {
                // Add event listeners for real-time validation
                this.requiredInputs.forEach(input => {
                    input.addEventListener('input', () => this.validateInput(input));
                    input.addEventListener('change', () => this.validateInput(input));
                    input.addEventListener('blur', () => this.validateInput(input));
                    input.addEventListener('focus', () => this.clearValidationState(input));
                });
                
                // Form submission handler
                this.form.addEventListener('submit', (e) => this.handleSubmit(e));
                
                // Initial progress update
                this.updateProgress();
            }
            
            validateInput(input) {
                const value = input.value.trim();
                const isValid = this.isInputValid(input, value);
                
                if (value === '') {
                    this.clearValidationState(input);
                } else if (isValid) {
                    this.setValidState(input);
                } else {
                    this.setInvalidState(input);
                }
                
                this.updateProgress();
            }
            
            isInputValid(input, value) {
                if (input.type === 'email') {
                    return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value);
                }
                if (input.type === 'tel') {
                    return /^\+?[\d\s\-\(\)]+$/.test(value) && value.length >= 10;
                }
                if (input.tagName === 'TEXTAREA') {
                    return value.length >= 20;
                }
                return value.length > 0;
            }
            
            setValidState(input) {
                input.classList.remove('invalid');
                input.classList.add('valid');
            }
            
            setInvalidState(input) {
                input.classList.remove('valid');
                input.classList.add('invalid');
            }
            
            clearValidationState(input) {
                input.classList.remove('valid', 'invalid');
            }
            
            updateProgress() {
                let validCount = 0;
                
                this.requiredInputs.forEach(input => {
                    if (input.type === 'checkbox') {
                        if (input.checked) validCount++;
                    } else if (input.value.trim() !== '' && this.isInputValid(input, input.value.trim())) {
                        validCount++;
                    }
                });
                
                const percentage = Math.min((validCount / this.requiredInputs.length) * 100, 100);
                if (this.progressBar) {
                    this.progressBar.style.width = percentage + '%';
                }
                
                // Enable submit button when form is complete
                const isFormComplete = percentage === 100;
                this.submitBtn.disabled = !isFormComplete;
                this.submitBtn.style.opacity = isFormComplete ? '1' : '0.7';
            }
            
            async handleSubmit(e) {
                e.preventDefault();
                
                // Show loading state
                this.setLoadingState(true);
                
                try {
                    // Simulate form processing with realistic delay
                    await new Promise(resolve => setTimeout(resolve, 2500));
                    
                    // Show success state
                    this.showSuccess();
                    
                    // Track submission (you'd replace this with actual analytics)
                    this.trackFormSubmission();
                    
                } catch (error) {
                    this.showError('Something went wrong. Please try again.');
                } finally {
                    this.setLoadingState(false);
                }
            }
            
            setLoadingState(loading) {
                if (loading) {
                    this.submitText.classList.add('hidden');
                    this.submitLoading.classList.remove('hidden');
                    this.submitBtn.disabled = true;
                } else {
                    this.submitText.classList.remove('hidden');
                    this.submitLoading.classList.add('hidden');
                    this.submitBtn.disabled = false;
                }
            }
            
            showSuccess() {
                this.successDiv.classList.remove('hidden');
                this.successDiv.scrollIntoView({ 
                    behavior: 'smooth', 
                    block: 'center' 
                });
                
                // Reset form after delay
                setTimeout(() => {
                    this.resetForm();
                }, 4000);
            }
            
            showError(message) {
                this.showNotification(message, 'error');
            }
            
            resetForm() {
                this.form.reset();
                this.requiredInputs.forEach(input => this.clearValidationState(input));
                this.updateProgress();
                this.successDiv.classList.add('hidden');
            }
            
            trackFormSubmission() {
                // Analytics tracking would go here
                console.log('Form submitted successfully');
            }
            
            showNotification(message, type = 'success') {
                const notification = document.createElement('div');
                notification.className = `notification ${type}`;
                notification.innerHTML = `
                    <div class="flex items-center space-x-2">
                        <div class="w-2 h-2 rounded-full bg-current"></div>
                        <span>${message}</span>
                    </div>
                `;
                
                document.body.appendChild(notification);
                
                setTimeout(() => notification.classList.add('show'), 100);
                setTimeout(() => {
                    notification.classList.remove('show');
                    setTimeout(() => notification.remove(), 300);
                }, 4000);
            }
        }

        // Enhanced Mobile Menu Handler
        class MobileMenuHandler {
            constructor() {
                this.menuBtn = document.getElementById('mobile-menu-btn');
                this.menu = document.getElementById('mobile-menu');
                this.isOpen = false;
                
                this.init();
            }
            
            init() {
                this.menuBtn.addEventListener('click', () => this.toggle());
                this.menu.addEventListener('click', (e) => {
                    if (e.target === this.menu) this.close();
                });
                
                // Close on escape key
                document.addEventListener('keydown', (e) => {
                    if (e.key === 'Escape' && this.isOpen) this.close();
                });
                
                // Close on resize
                window.addEventListener('resize', () => {
                    if (window.innerWidth >= 1024 && this.isOpen) this.close();
                });
            }
            
            toggle() {
                this.isOpen ? this.close() : this.open();
            }
            
            open() {
                this.menu.classList.remove('hidden');
                document.body.style.overflow = 'hidden';
                this.isOpen = true;
            }
            
            close() {
                this.menu.classList.add('hidden');
                document.body.style.overflow = '';
                this.isOpen = false;
            }
        }

        // Enhanced Navbar Handler with better scroll detection
        class NavbarHandler {
            constructor() {
                this.navbar = document.getElementById('navbar');
                this.lastScrollY = 0;
                this.scrollThreshold = 100;
                this.hideThreshold = 300;
                
                this.init();
            }
            
            init() {
                let scrollTicking = false;
                
                window.addEventListener('scroll', () => {
                    if (!scrollTicking) {
                        requestAnimationFrame(() => this.handleScroll());
                        scrollTicking = true;
                        setTimeout(() => { scrollTicking = false; }, 10);
                    }
                });
            }
            
            handleScroll() {
                const currentScrollY = window.scrollY;
                
                // Change navbar background based on scroll
                if (currentScrollY > this.scrollThreshold) {
                    this.navbar.style.background = 'rgba(13, 17, 23, 0.98)';
                    this.navbar.style.borderBottom = '1px solid rgba(0, 212, 170, 0.3)';
                    this.navbar.style.boxShadow = '0 4px 30px rgba(0, 0, 0, 0.3)';
                } else {
                    this.navbar.style.background = 'rgba(33, 38, 45, 0.8)';
                    this.navbar.style.borderBottom = '1px solid rgba(255, 255, 255, 0.125)';
                    this.navbar.style.boxShadow = '0 2px 20px rgba(0, 0, 0, 0.1)';
                }
                
                // Hide/show navbar on scroll
                if (currentScrollY > this.lastScrollY && currentScrollY > this.hideThreshold) {
                    this.navbar.style.transform = 'translateY(-100%)';
                } else {
                    this.navbar.style.transform = 'translateY(0)';
                }
                
                this.lastScrollY = currentScrollY;
            }
        }

        // Enhanced Success Stories Carousel
        class SuccessCarousel {
            constructor() {
                this.carousel = document.getElementById('success-carousel');
                this.currentStory = 0;
                this.stories = [
                    {
                        name: "Thabo M.",
